.collections
  display flex
  flex-direction column
  width 100%
  padding-bottom 43px

.collections__heading
  width 100%
  padding 37px 0 34px 0
  text-align center
  text-transform uppercase
  Roboto(400, 22px)
  color dark-text
  border-bottom 1px solid gray

.collections__inner-container
  width 1138px
  margin 0 auto

.collections__filter
  display flex
  margin 43px 0 50px 0

  a
    margin-right 20px
    Roboto(400, 12px)
    text-transform uppercase
    color dark-text

  .collections__active-filter
    color carrot

.collections__items-container
  display flex
  justify-content space-between
  flex-wrap wrap
  padding-bottom 15px

.collections__item
  display flex
  flex-direction column
  align-items center
  width 367px
  height 360px
  img
    width 367px
    height 231px
    background #7b7d81

.collections__item-name
  margin-top 30px
  Roboto(normal, 13px)
  color dark-text
  text-transform uppercase

.collections__item-descript
  margin-top 15px
  Roboto(normal, 12px)
  font-style italic
  color dark-gray
