.main-header
  display flex
  justify-content space-between
  width 1138px
  margin 0 auto
  padding 40px 0 31px 0

.main-header__call-us
  margin-right auto
  margin-left 20px
  padding-top 2px
  Roboto(bold, 12px)
  letter-spacing: 1.3px
  color dark

.main-header__custom-actions
  margin-left auto

.main-header__search
  position relative

  &::before
    content ""
    display block
    width 13px
    height 13px
    position absolute
    top 3px
    right 20px
    background url(../img/sprites/spritesheet.png) -5px -229px


.main-header__login
  margin-right 13px
  OpenSans(normal, 12px)
  text-transform uppercase
  color carrot


.main-header__my-basket
  position relative
  padding 1px 5px 1px 4px
  OpenSans(bold, 12px)
  text-transform uppercase
  color #fff
  background carrot
  border-radius 3px
  z-index 0

.main-header__my-basket::before
  content ""
  display block
  position absolute
  top 1px
  left -4px
  width 0px
  height 0px
  border-style solid
  border-width 9px 4px 7px 0
  border-color transparent carrot transparent transparent
  z-index 10

.main-header__custom-actions
  &--login-session
    .main-header__my-basket
      background #79c28a
    .main-header__my-basket::before
      border-color transparent #79c28a transparent transparent
