.login-form
  display none
  position absolute
  width 100%
  height 100%
  z-index 100

.login-form--show
  display block

.login-form__overflow
  width 100%
  height 100%
  background rgba(255, 255, 255, 0.9)

.login-form__container
  width 100%
  position absolute
  top 0
  left 0
  background #f5f5f5

.login-form__form
  display flex
  width 1087px
  margin 0 auto
  padding 33px 0px

  form
    width 1138px

.login-form__heading
  position relative
  Roboto(normal, 17px)
  color dark-text
  text-transform uppercase
  margin-left 35px
  letter-spacing 1.5px
  &::before
    content ""
    display block
    width 21px
    height 18px
    position absolute
    top -1px
    left -33px
    background url(../img/sprites/spritesheet.png) -5px -252px

.login-form__input-area
  display flex
  justify-content space-between
  width 100%
  margin-top 28px

  input
    width 529px
    padding 13px 20px 14px 17px
    Roboto(400, 13px)
    color dark-gray
    background #fff
    border none

.login-form__entrance
  display flex
  margin-top 32px

  label
    Roboto(400, 13px)
    color dark-gray
    align-self center
    padding-left 30px

  input[type="checkbox"]
    display none

  input[type="checkbox"]+ label
    display block
    margin-left 23px
    position relative
    cursor pointer

  input[type="checkbox"]+ label::before
    content ""
    display block
    position absolute
    top 0
    left 0
    width 16px
    height 16px
    background #fff

  input[type="checkbox"]:checked+ label::after
    content ""
    display block
    position absolute
    top 3px
    left 3px
    width 10px
    height 10px
    background #000
    z-index 10

.login-form__entrance-btn
  padding 19px 52px 16px 52px
  Roboto(normal, 13px)
  text-transform uppercase
  color #fff
  background carrot
  letter-spacing 1.5px

.login-form__extra-links
  Roboto(400, 13px)
  font-style italic
  margin-top 25px

  a
    color dark-gray
    text-decoration underline
    margin-right 57px
